@model List<ferrilata_devilline.Models.DAOs.Badge>;

<div class="page-header">
    <h1>Badges</h1>
</div>

<div>
    <table class="table table-condensed" style="border-collapse:collapse;">
        <thead class="table-primary">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Version</th>
                <th scope="col">Name</th>
                <th scope="col">Tag</th>
                <th scope="col">Expand for Levels</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var badge in Model)
            {
                <tr data-toggle="collapse" data-target="#@badge.Name.Replace(" ", String.Empty)" class="accordion-toggle">
                    <td>@badge.Id</td>
                    <td>@badge.Version</td>
                    <td>@badge.Name</td>
                    <td>@badge.Tag</td>
                    <td>Levels</td>
                </tr>
                <tr>
                    <td colspan="6" class="hiddenRow">
                        <div class="accordian-body collapse" id="@badge.Name.Replace(" ", String.Empty)">
                            <table class="table table-condensed" style="border-collapse:collapse;">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">LevelNumber</th>
                                        <th scope="col">Weight</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Holders</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var level in badge.Levels)
                                    {
                                        <tr data-toggle="collapse" data-target="#@level.Description.Replace(" ", String.Empty)" class="accordion-toggle">
                                            <td>@level.LevelNumber</td>
                                            <td>@level.Weight</td>
                                            <td>@level.Description</td>
                                            <td>Click for more badges</td>
                                        </tr>
                                        <tr>
                                            <td colspan="6" class="hiddenRow">
                                                <div class="accordian-body collapse" id="@level.Description.Replace(" ", String.Empty)">
                                                    <table class="table table-condensed" style="border-collapse:collapse;">
                                                        <thead class="thead-dark">
                                                            <tr>
                                                                <th scope="col">Name</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var holder in level.Holders)
                                                            {
                                                                <tr>
                                                                    <td>@holder.Name</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

