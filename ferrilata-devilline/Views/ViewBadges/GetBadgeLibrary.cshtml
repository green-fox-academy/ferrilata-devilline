@model List<BadgeDTO>;

@{
    ViewData["Title"] = "Badge Library";
}

<div class="page-header">
    <h1 class="display-3 float-left">Badges</h1>
    <div class="float-right">
        <button type="button" class="btn btn-info" id="add-badge" data-toggle="modal" data-target="#Badge">Add</button>
        <div class="modal fade" id="Badge">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form id="needs-validation" novalidate asp-controller="ViewBadges" asp-action="CreateAndAddBadge" method="post">
                        <div class="modal-header">
                            <h5 class="modal-title text-uppercase text-center">New Badge</h5>
                        </div>
                        <div class="modal-body">

                            <div class="form-row">
                                <label for="Name">Name</label>
                                <input id="Name" name="Name" type="text" class="form-control" aria-describedby="inputGroupPrepend" required/>
                                <div class="invalid-feedback">
                                    Please enter the badge name.
                                </div>
                            </div>
                            <div class="form-row">
                                <label for="Version">Version</label>
                                <input id="Version" name="Version" type="text" class="form-control" aria-describedby="inputGroupPrepend" required/>
                                <div class="invalid-feedback">
                                    Please enter badge version.
                                </div>
                            </div>
                            <div class="form-row">
                                <label for="Tag">Tag</label>
                                <input id="Tag" name="Tag" type="text" class="form-control" aria-describedby="inputGroupPrepend" required/>
                                <div class="invalid-feedback">
                                    Please add a tag.
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger rounded-0" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success rounded-0">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
            @foreach (var badge in Model)
            {
                <div class="panel panel-info">
                    <div class="panel-heading" role="tab" id="@("heading" + badge.BadgeId)">
                        <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#@("a" + badge.BadgeId)" aria-expanded="true" aria-controls="@("a" + badge.BadgeId)">
                                @badge.Name
                            </a>
                        </h4>
                        <form asp-controller="ViewBadges" asp-action="DeleteBadgeFromLibrary" asp-route-badgeId="@badge.BadgeId" method="post" class="float-right">
                            <button type="submit" class="btn btn-info">Delete</button>
                        </form>
                    </div>
                    <div id="@("a" + badge.BadgeId)" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="@("heading" + badge.BadgeId)">
                        <div class="panel-body">
                            <div class="row">
                                @if (badge.Levels.Count < 1)
                                {
                                    <p class ="col-sm-4">There are no levels yet.</p>
                                }
                                @foreach (var level in badge.Levels)
                                {
                                    <div class="col-sm-4">
                                        <div class="card border-info mb-3" style="max-width: 20rem;">
                                            <div class="card-header">Level @level.LevelNumber</div>
                                            <div class="card-body">

                                                <p class="lead text-primary">@level.Description</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div>
                                <button type="button" class="btn btn-info" id="add-level" data-toggle="modal" data-target="#Level">New Level</button>
                                <div class="modal fade" id="Level">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form id="needs-validation" novalidate asp-controller="ViewBadges" asp-action="CreateAndAddLevel" asp-route-badgeId="@badge.BadgeId" method="post">
                                                <div class="modal-header">
                                                    <h5 class="modal-title text-uppercase text-center">New Level</h5>
                                                </div>
                                                <div class="modal-body">

                                                    <div class="form-row">
                                                        <label for="LevelNumber">LevelNumber</label>
                                                        <input id="LevelNumber" name="LevelNumber" type="text" class="form-control" aria-describedby="inputGroupPrepend" required/>
                                                        <div class="invalid-feedback">
                                                            Please enter the level number.
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <label for="Weight">Weight</label>
                                                        <input id="Weight" name="Weight" type="text" class="form-control" aria-describedby="inputGroupPrepend" required/>
                                                        <div class="invalid-feedback">
                                                            Please enter level weight.
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <label for="Description">Description</label>
                                                        <input id="Description" name="Description" type="text" class="form-control" aria-describedby="inputGroupPrepend" required/>
                                                        <div class="invalid-feedback">
                                                            Please add a description.
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-danger rounded-0" data-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-success rounded-0">Create</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>